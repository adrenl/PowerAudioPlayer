<UserControl x:Class="PowerAudioPlayer.BottomLeftMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerAudioPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500" d:Visibility="Visible" Width="Auto" Height="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Left" Visibility="Hidden" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <Grid>
        <Border BorderThickness="1" BorderBrush="{Binding Converter={StaticResource SystemThemeColorConverter}}" Background="{Binding Converter={StaticResource SystemThemeColorConverter}, ConverterParameter=0.6}" Opacity="0.6"/>
        <TextBlock x:Name="TextBoxMessage" Margin="5"/>
        <!--<TextBlock x:Name="TextBoxMessage" Margin="5" Style="{DynamicResource DefaultTextBlockStyle}"/>-->
    </Grid>
</UserControl>
