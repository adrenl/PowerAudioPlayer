<UserControl x:Class="PowerAudioPlayer.CenterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerAudioPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" d:Visibility="Visible" Visibility="Collapsed">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Frame x:Name="FramePage"/>
            <Button x:Name="ButtonClose" BorderBrush="Transparent" Background="Transparent" Width="15" Height="15" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonClose_Click">
                <Path Width="10" Height="10" Data="M0.7,0 L5,4.3 L9.3,0 L10,0.7 L5.7,5 L10,9.3 L9.3,10 L5,5.7 L0.7,10 L0,9.3 L4.3,5 L0,0.7 z" Fill="{Binding (TextBlock.Foreground), RelativeSource={RelativeSource AncestorType=ContentPresenter}}" RenderTransformOrigin="0.5,0.5" Stretch="Uniform" />
            </Button>
        </WrapPanel>
        
    </Grid>
</UserControl>
